---
interface Props {
	title: string;
	description: string;
    image?: string;
    type?: string;
}

const { title, description, image = "/favicon.svg", type = "website" } = Astro.props;

// ğŸ”´ æ ¸å¿ƒ SEO ä¼˜åŒ–ï¼šCanonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);
